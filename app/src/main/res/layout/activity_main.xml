<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.view.MainActivity">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        app:itemIconTint="@color/nav_bar_item_state_list"
        app:itemTextColor="@color/nav_bar_item_state_list"
        app:layout_behavior="com.example.carlos.kotlinacademycarlos.common.BottomNavigationBehavior"
        app:menu="@menu/my_navigation_items" />

</android.support.design.widget.CoordinatorLayout>
